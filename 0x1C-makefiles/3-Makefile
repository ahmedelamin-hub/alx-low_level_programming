# 3-Makefile

# Compiler to be used
CC=gcc

# Source files
SRC=main.c school.c

# Object files, generated by substituting the .c extensions in SRC with .o
OBJ=$(SRC:.c=.o)

# Name of the executable
NAME=school

# Program to delete files
RM=rm -f

# Rule for that builds executable
all: $(NAME)

# Rule to compile the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Pattern rule for the followin object files
%.o: %.c
	$(CC) -c -o $@ $<

# Rule to delete Emacs and Vim filess
clean:
	$(RM) *~ $(NAME)

# Rule to delete the object files
oclean:
	$(RM) $(OBJ)

# Rule to delete Emacs and Vim files
fclean: clean oclean

# Rule to force recompilation
re: fclean all

# Phony targets
.PHONY: all clean oclean fclean re
